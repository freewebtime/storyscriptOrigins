  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Print story",
      "program": "${workspaceFolder}/tasks/print_story.js",
      "sourceMaps": true,
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "compile"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug story",
      "program": "${workspaceFolder}/tasks/debug_story.js",
      "sourceMaps": true,
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "compile",
      "outFiles": [
        "${workspaceRoot}/out/**/*.js"
      ],
    }
  ]
}